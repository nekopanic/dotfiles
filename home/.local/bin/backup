#!/bin/bash

BACKUP_PATH=/media/swf/BANANABOAT/$HOSTNAME
if [ ! -d /media/swf/BANANABOAT ]; then
  read -e -i "rdiff-backup destination (e.g. bananaking.local::/media/swf/BANANABOAT/seagoat): " BACKUP_PATH
fi

rdiff-backup -v5 --exclude-if-present .nobackup --include-globbing-filelist $HOME/.backup.$HOSTNAME / $BACKUP_PATH
